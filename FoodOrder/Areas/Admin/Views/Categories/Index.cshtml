@model IEnumerable<FoodOrder.ViewModels.CategoryViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-5 mb-2">List Of Categories</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                  <a class="btn btn-info mr-1" asp-area="Admin" 
                                asp-action="Details" asp-controller="Categories" asp-route-id="@item.Id">Detail</a> 
                  <a class="btn btn-warning mr-1" asp-area="Admin" 
                                asp-action="Edit" asp-controller="Categories" asp-route-id="@item.Id">Edit</a> 
                 <a class="btn btn-danger mr-1" asp-area="Admin" 
                                asp-action="Delete" asp-controller="Categories" asp-route-id="@item.Id">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>

<a class="btn btn-primary p-2 mt-5" asp-area="Admin" 
    asp-action="Create" asp-controller="Categories">Create New Categories</a>

